#include <stdio.h>

int main() {
   char operator;
   float num1, num2, result;

   printf("Podaj dzialanie do wykonania (+, -, *, /): ");
   scanf("%c", &operator);

   printf("Podaj dwie liczby oddzielone spacja: ");
   scanf("%f %f", &num1, &num2);

   switch(operator) {
      case '+':
         result = num1 + num2;
         printf("%.2f + %.2f = %.2f", num1, num2, result);
         break;

      case '-':
         result = num1 - num2;
         printf("%.2f - %.2f = %.2f", num1, num2, result);
         break;

      case '*':
         result = num1 * num2;
         printf("%.2f * %.2f = %.2f", num1, num2, result);
         break;

      case '/':
         if(num2 == 0){
            printf("Nie mozna dzielic przez 0");
         }
         else{
            result = num1 / num2;
            printf("%.2f / %.2f = %.2f", num1, num2, result);
         }
         break;

      default:
         printf("Niepoprawny operator");
   }

   return 0;
}
