#include <stdio.h>

int silnia(int n) {
    int wynik = 1;
    for (int i = 2; i <= n; i++) {
        wynik *= i;
    }
    return wynik;
}

void zad2_2_2() {
    int n;
    printf("Podaj nieujemna liczbe calkowita: ");
    scanf("%d", &n);
    if (n < 0) {
        printf("Bledne dane wejsciowe\n");
        return;
    }
    int wynik = silnia(n);
    printf("%d! = %d\n", n, wynik);
    }

int main() {
    zad2_2_2();
    return 0;
}
